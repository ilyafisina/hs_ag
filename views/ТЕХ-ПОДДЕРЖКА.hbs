{{> menu}}
<section class="form-wrap">
    <div class="profile"><img src="https://html5book.ru/wp-content/uploads/2016/10/profile-image.png">
        <h1>Тех. поддержка</h1>
    </div>
<form method="POST">
    <div>
        <label>Проблема</label>
        <input type="text" name="problems" required placeholder="Ваша проблема"/><br><br>
    </div>
    <div>
        <label>Имя</label>
        <input type="text" name="name" required pattern="[А-Яа-яЁё]{4,}" placeholder="Ваше Имя" title="Имя должно быть на русском. Пример: Степа, Петя, Вася, Оля"/><br><br>
    </div>
    <div>
        <label>Контактный телефон</label>
        <input type="text" name="phone" required placeholder="Ваше номер телефона" pattern="[0-9-0]{11}"/><br><br>
    </div>
    <button type="submit">Отправить</button>
</form>
</section>
<section>
    <table class="table_col">
        <colgroup>
            <col style="background:#ffd500;">
        </colgroup>
        <tr>
            <th>Проблема</th>
            <th>Ответ</th>
            <th>Дата вопроса</th>
        </tr>
        {{#each technical_support}}
        <tr>
            <td>{{this.problems}}</td>
            <td>{{this.answer}}</td>
            <td>{{this.createdAt}}</td>
        </tr>
